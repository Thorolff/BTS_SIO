{% extends "layout.html.twig" %}

{% block content %}
    <div class="jumbotron">
        <h2>Albums de BD</h2>
        Le paramètre "param1" a la valeur suivante : {{param1}} (il n'est pas utilisé ici)
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Auteur(s)</th>
                    <th>Editeur</th>
                    <th>Parution
                    </th>
                </tr>
            </thead>
            <tbody>    
                {% for album in listebd %}
                    <tr>
                        <td>{{album.id}}</td>
                        <td>{{album.album|capitalize}}</td>
                        <td>{{album.auteur|title}}</td>
                        <td>{{album.editeur|title}}</td>
                        <td>{{album.parution|date("d/m/y")}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}